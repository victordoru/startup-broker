{
  "name": "react-vite-mongo-template",
  "version": "1.0.0",
  "description": "Template project with React + Vite + Tailwind CSS v4 + Express + MongoDB",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:server\"",
    "dev:front": "cd front && npm run dev",
    "dev:server": "cd server && npm run dev",
    "start:front": "cd front && npm run dev",
    "start:server": "cd server && npm start",
    "build": "cd front && npm run build",
    "install:all": "npm install && cd front && npm install && cd ../server && npm install",
    "install:front": "cd front && npm install",
    "install:server": "cd server && npm install"
  },
  "keywords": [
    "react",
    "vite",
    "tailwindcss",
    "express",
    "mongodb",
    "template"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

